@model eBidWEBSITE.Models.tblProduct
@{
    ViewBag.Title = "addproduct";
    Layout = "~/Views/dashboard/_dashboard.cshtml";
}

<h2>addproduct</h2>


@using (Html.BeginForm("addproduct", "product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="container">
        <h2>Add Product</h2>
        <div class="row">
            <div class="col-lg-4">


                <form class="bg-white p-5 contact-form">
                    <div class="form-group">
                        <span>Name:</span>
                        @Html.TextBoxFor(m => m.pro_Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <span>Categories:</span>
                        @Html.DropDownListFor(m => m.CatId, ViewBag.CatList as SelectList, "-- Select Category ---")
                    </div>

                    <div class="form-group">
                        <span>Description:</span>
                        @Html.TextBoxFor(m => m.pro_Description, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <span>Unit Price:</span>
                        @Html.TextBoxFor(m => m.pro_price, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <span>Select Image:</span>
                        <input type="file" name="Image" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add Product" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
                <h3 style="color:red;">@TempData["msg"]</h3>

            </div>

        </div>

    </div>
}
